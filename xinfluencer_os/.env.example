# XInfluencerOS Configuration
# Copy to .env and fill in your keys

# API Keys
PERPLEXITY_API_KEY=your_perplexity_api_key_here
OPENROUTER_API_KEY=your_openrouter_key_here

# AI Models
PERPLEXITY_MODEL=sonar-pro
AI_MODEL=meta-llama/llama-3-8b-instruct:free

# Daily Rate Limits
MAX_REPLIES_PER_DAY=70
MAX_LIKES_PER_DAY=20
MAX_RETWEETS_PER_DAY=4
MAX_POSTS_PER_DAY=2

# Hourly Limits
MAX_REPLIES_PER_HOUR=12

# Humanization - Delays (seconds)
MIN_ACTION_DELAY=2
MAX_ACTION_DELAY=6
MIN_POST_DELAY=30
MAX_POST_DELAY=180

# Sessions
SESSION_MIN_ACTIONS=3
SESSION_MAX_ACTIONS=7
BREAK_MIN_MINUTES=5
BREAK_MAX_MINUTES=25

# Sleep Window (24h format)
SLEEP_WINDOW_START=2
SLEEP_WINDOW_END=7

# Skip Chance (0.0 - 1.0)
SKIP_CHANCE_MIN=0.20
SKIP_CHANCE_MAX=0.35
